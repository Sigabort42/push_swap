#include "../push_swap.h"

void	ft_phase_one(t_vari *var)
{
	while (var->last_a && ft_count_pile(var->last_a) > 2)
	{
		var->count++;
		var->tab_func[PB_CMD].f(var);
		ft_putendl(PB);
//		if (ft_count_pile(var->last_b) > 1)
//			printf("first = %d %d\n", var->last_b->nb, var->last_b->prev->nb);
		if (var->last_b < var->last_b->prev)
		{
			var->tab_func[SB_CMD].f(var);
			ft_putendl(SB);
			var->count++;
		}
		while (var->last_b < var->first_b)
		{
			var->tab_func[RB_CMD].f(var);
			ft_putendl(RB);
			var->count++;
		}
	}
}
